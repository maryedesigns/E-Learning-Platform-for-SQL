<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SQL Learning Hub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/E_LearningProject.styles.css" asp-append-version="true" /> *@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">


</head>
<body>
    <header class="fixed-top">
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo -->
                @if (Context.User.Identity.Name != null)
                {
                        <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="StartLearning">
                            <img class="logo me-2" src="~/images/pic-project.jpeg" style="width: 40px; height: 40px; border-radius: 10px;" />&nbsp; &nbsp;
                            <div class="d-flex flex-column" style="line-height: 1.2">
                                <span class="d-block fw-bold" style="font-size: 1.2rem; font-family:inknut Antiqua;">SQL Learning Hub</span>
                                <span class="small-text" style="font-family:mystery quest;">Queries Simplified</span>
                            </div>
                        </a>
                }
                else
                {
                        <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                            <img class="logo me-2" src="~/images/pic-project.jpeg" style="width: 40px; height: 40px; border-radius: 10px;" />&nbsp; &nbsp;
                            <div class="d-flex flex-column" style="line-height: 1.2">
                                <span class="d-block fw-bold" style="font-size: 1.2rem; font-family:inknut Antiqua;">SQL Learning Hub</span>
                                <span class="small-text" style="font-family:mystery quest;">Queries Simplified</span>
                            </div>
                        </a>
                }

                <!-- Navbar Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Content -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    @if (Context.User.Identity.Name != null)
                    {
                            <ul class="navbar-nav flex-grow-1 justify-content-center">
                                <!-- Search Form -->
                                <li class="nav-item w-100 d-flex justify-content-center">
                                    <form asp-controller="Courses" asp-action="Search" method="get" class="w-100" style="max-width: 600px;">
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-search"></i>
                                            </span>
                                            <input class="form-control" style="font-family:inria serif;" type="search" name="query" value="@ViewBag.Query" placeholder="Search Courses" aria-label="Search">
                                        </div>
                                    </form>
                                </li>
                            </ul>
                    }

                    <!-- Login Partial -->
                    <ul class="navbar-nav ms-lg-auto ms-auto">
                        @await Html.PartialAsync("_LoginPartial")
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-1">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer pt-4" style="background-color: #4D4D4D; color: white;">
        <div class="container" style="text-align:center">
            <div class="row">
                <div class="col-md-3">
                    <p style="color: white;">SQL Learning Hub</p>
                    <p style="color: white;">Learn SQL the right way</p>
                </div>
                <div class="col-md-3">
                    <p style="color: white;">Quick Links</p>
                    <p style="color: white;">About Us</p>
                    <p style="color: white;">Courses</p>
                    <p style="color: white;">Practice</p>
                </div>
                <div class="col-md-3">
                    <p style="color: white;">Support</p>
                    <p style="color: white;">Help Center</p>
                    <p style="color: white;">Contact Us</p>
                    <p style="color: white;">FAQ</p>
                </div>
                <div class="col-md-3">
                    <p style="color: white;">Login</p>
                    <p style="color: white;">SignUp</p>
                </div>
            </div>
            <hr style="color: gray;" />
            <p class="footer-text" style="margin: 0; color: white;">&copy; 2025 - SQL Learning Hub. All Rights Reserved</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
