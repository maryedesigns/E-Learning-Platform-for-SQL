@model E_LearningProject.Entities.Courses

@{
    ViewData["Title"] = "Create Course";
}


<div class="container mt-5" style="min-height: 100vh; background-color:#D9D9D9; padding: 50px 20px">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-6 mt-5">
            <h3 class="text-center">Add new Courses</h3>
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Id" type="hidden" class="form-control" />
                </div>
                &nbsp; &nbsp;

                <div class="form-group">
                    <label asp-for="CourseName" class="control-label"></label>
                    <input asp-for="CourseName" class="form-control" />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>
                &nbsp; &nbsp;

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                &nbsp; &nbsp;

                <div class="form-group">
                    <label asp-for="WordDocumentPath" class="control-label"></label>
                    <input type="file" name="wordDocument" accept=".doc,.docx" class="form-control" />
                    <span asp-validation-for="WordDocumentPath" class="text-danger"></span>
                </div>
                &nbsp; &nbsp;

                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label"></label>
                    <input type="file" name="imageFile" accept="image/*" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                &nbsp; &nbsp;

                <div class="form-group">
                    <label asp-for="YouTubeUrl" class="control-label"></label>
                    <input asp-for="YouTubeUrl" class="form-control" />
                    <span asp-validation-for="YouTubeUrl" class="text-danger"></span>
                </div>

                &nbsp; &nbsp;


                <div class="form-group">
                    <label asp-for="CourseDescription" class="control-label"></label>
                    <textarea asp-for="CourseDescription" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="CourseDescription" class="text-danger"></span>
                </div>

                &nbsp; &nbsp;

                <div class="form-group">
                    <label asp-for="WhatYouWillLearn" class="control-label"></label>
                    <textarea asp-for="WhatYouWillLearn" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="WhatYouWillLearn" class="text-danger"></span>
                </div>

                &nbsp; &nbsp;

                <div class="form-group">
                    <label asp-for="WhoShouldTakeThisCourse" class="control-label"></label>
                    <textarea asp-for="WhoShouldTakeThisCourse" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="WhoShouldTakeThisCourse" class="text-danger"></span>
                </div>

                <!-- Spacing to prevent overlap -->
                <div style="height: 25px;"></div>

                <div class="d-flex justify-content-center pb-4">
                    <button style="background-color:#7A046A; color:white; font-family:inria serif; font-weight: bold; border-radius:10px;" type="submit">Save Course</button>
                </div>
            </form>
        </div>

       
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
